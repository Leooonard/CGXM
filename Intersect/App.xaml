<Application x:Class="Intersect.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="窗体/开始/OpenWindow.xaml">
    <Application.Resources>
        <Style x:Key="OperationButton">
            <Setter Property="Button.FontSize" Value="12"></Setter>
            <Setter Property="Button.Width" Value="100"></Setter>
            <Setter Property="Button.Height" Value="30"></Setter>
            <Setter Property="Button.Foreground" Value="White"></Setter>
            <Setter Property="Button.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="0" CornerRadius="3" Name="PART_Background">
                            <Border.Background>
                                <SolidColorBrush>#337ab7</SolidColorBrush>
                            </Border.Background>
                            <ContentPresenter Content="{TemplateBinding ContentControl.Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Button.IsMouseOver" Value="True">
                    <Setter Property="Button.Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="0" CornerRadius="3" Name="PART_Background">
                                    <Border.Background>
                                        <SolidColorBrush>#286090</SolidColorBrush>
                                    </Border.Background>
                                    <ContentPresenter Content="{TemplateBinding ContentControl.Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Button.IsPressed" Value="True">
                    <Setter Property="Button.Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border BorderThickness="1" CornerRadius="3" Name="PART_Background">
                                    <Border.Background>
                                        <SolidColorBrush>#286090</SolidColorBrush>
                                    </Border.Background>
                                    <Border.BorderBrush>
                                        <SolidColorBrush>#4D90FE</SolidColorBrush>
                                    </Border.BorderBrush>
                                    <ContentPresenter Content="{TemplateBinding ContentControl.Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="OperationButton_Small" BasedOn="{StaticResource OperationButton}">
            <Setter Property="Button.FontSize" Value="11"></Setter>
            <Setter Property="Button.Width" Value="50"></Setter>
            <Setter Property="Button.Height" Value="20"></Setter>
        </Style>
        <Style x:Key="WarningButton">
            <Setter Property="Button.FontSize" Value="12"></Setter>
            <Setter Property="Button.Width" Value="100"></Setter>
            <Setter Property="Button.Height" Value="30"></Setter>
            <Setter Property="Button.Foreground" Value="White"></Setter>
            <Setter Property="Button.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="0" CornerRadius="3" Name="PART_Background">
                            <Border.Background>
                                <SolidColorBrush>#d9534f</SolidColorBrush>
                            </Border.Background>
                            <ContentPresenter Content="{TemplateBinding ContentControl.Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Button.IsMouseOver" Value="True">
                    <Setter Property="Button.Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="0" CornerRadius="3" Name="PART_Background">
                                    <Border.Background>
                                        <SolidColorBrush>#c9302c</SolidColorBrush>
                                    </Border.Background>
                                    <ContentPresenter Content="{TemplateBinding ContentControl.Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Button.IsPressed" Value="True">
                    <Setter Property="Button.Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border BorderThickness="1" CornerRadius="3" Name="PART_Background">
                                    <Border.Background>
                                        <SolidColorBrush>#c9302c</SolidColorBrush>
                                    </Border.Background>
                                    <Border.BorderBrush>
                                        <SolidColorBrush>#4D90FE</SolidColorBrush>
                                    </Border.BorderBrush>
                                    <ContentPresenter Content="{TemplateBinding ContentControl.Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="WarningButton_Small" BasedOn="{StaticResource WarningButton}">
            <Setter Property="Button.FontSize" Value="11"></Setter>
            <Setter Property="Button.Width" Value="50"></Setter>
            <Setter Property="Button.Height" Value="20"></Setter>
        </Style>
        <Style x:Key="SuccessButton">
            <Setter Property="Button.FontSize" Value="12"></Setter>
            <Setter Property="Button.Width" Value="100"></Setter>
            <Setter Property="Button.Height" Value="30"></Setter>
            <Setter Property="Button.Foreground" Value="White"></Setter>
            <Setter Property="Button.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="0" CornerRadius="3" Name="PART_Background">
                            <Border.Background>
                                <SolidColorBrush>#5cb85c</SolidColorBrush>
                            </Border.Background>
                            <ContentPresenter Content="{TemplateBinding ContentControl.Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Button.IsMouseOver" Value="True">
                    <Setter Property="Button.Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="0" CornerRadius="3" Name="PART_Background">
                                    <Border.Background>
                                        <SolidColorBrush>#449d44</SolidColorBrush>
                                    </Border.Background>
                                    <ContentPresenter Content="{TemplateBinding ContentControl.Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Button.IsPressed" Value="True">
                    <Setter Property="Button.Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border BorderThickness="1" CornerRadius="3" Name="PART_Background">
                                    <Border.Background>
                                        <SolidColorBrush>#449d44</SolidColorBrush>
                                    </Border.Background>
                                    <Border.BorderBrush>
                                        <SolidColorBrush>#4D90FE</SolidColorBrush>
                                    </Border.BorderBrush>
                                    <ContentPresenter Content="{TemplateBinding ContentControl.Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
