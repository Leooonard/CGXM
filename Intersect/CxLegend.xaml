<UserControl x:Class="Intersect.CxLegend"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.200*"/>
            <RowDefinition Height="0.800*"/>
        </Grid.RowDefinitions>
        <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="0.900" Fill="Transparent" Grid.Row="0" Grid.RowSpan="2"/>
        <Border CornerRadius="10" Background="#DF5C7590" Width="300" Height="200" Grid.Row="0" Grid.RowSpan="2"></Border>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="20" Foreground="White" x:Name="textContent"/>
        <StackPanel x:Name="LegendPanel" Orientation="Vertical" Grid.Row="1" Background="Transparent">
        </StackPanel>
     </Grid>
</UserControl>
